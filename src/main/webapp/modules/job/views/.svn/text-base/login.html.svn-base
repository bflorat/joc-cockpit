<link href="css/login.css" rel="stylesheet" type="text/css"/>

<!-- BEGIN LOGO -->
<div class="logo">
	<img src="images/logo.png" width="200" height="60" alt=""/>
</div>
<!-- END LOGO -->
<!-- BEGIN SIDEBAR TOGGLER BUTTON -->
<div class="menu-toggler sidebar-toggler">
</div>
<!-- END SIDEBAR TOGGLER BUTTON -->
<!-- BEGIN LOGIN -->
<div class="content">
	<!-- BEGIN LOGIN FORM -->
	<form class="login-form" role="form" ng-submit="login()" method="post">
		<h3 class="form-title">Login to your account</h3>
        <div class="alert alert-danger" ng-if="loginError">
			<button class="close" data-close="alert"></button>
			<span>{{loginError | translate}} </span>
		</div>
		<div class="form-group">
			<!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
			<label class="control-label visible-ie8 visible-ie9">Username</label>
			<div class="input-icon">
				<i class="fa fa-user"></i>
				<input class="form-control placeholder-no-fix" type="text" placeholder="Username" name="username" ng-model="data.username" required="" autofocus=""/>
			</div>
		</div>
		<div class="form-group">
			<label class="control-label visible-ie8 visible-ie9" >Password</label>
			<div class="input-icon">
				<i class="fa fa-lock"></i>
				<input class="form-control placeholder-no-fix" type="password" autocomplete="off" placeholder="Password" name="password" ng-model="data.password" required/>
			</div>
		</div>
		<div class="form-actions">
			<label class="marg-top5">
			<checkbox name="remember" value="" ng-model="rememberMe"></checkbox> <span class="marg-left5">Remember me </span></label>
			<button type="submit" class="btn green-haze pull-right">Login <i class="m-icon-swapright m-icon-white"></i></button>
		</div>

		<div class="forget-password">
			<h4>Forgot your password ?</h4>
			<p>
				no worries, click <a href="javascript:;" id="forget-password">
				here </a>
				to reset your password.
			</p>
		</div>
		<div class="create-account">
			<p>
				 Don't have an account yet ?&nbsp; <a href="javascript:;" id="register-btn" ng-click="getIP()">
				Create an account </a>
			</p>
		</div>
	</form>
	<!-- END LOGIN FORM -->

	<!-- BEGIN FORGOT PASSWORD FORM -->
	<form class="forget-form" ng-controller="ResetCtrl" ng-submit="reset()" method="post">
		<h3>Forget Password ?</h3>
		<p>
			 Enter your e-mail address below to reset your password.
		</p>
		<div class="form-group">
			<div class="input-icon">
				<i class="fa fa-envelope"></i>
				<input class="form-control placeholder-no-fix" type="email" autocomplete="off" placeholder="Email" name="email" ng-model="email"/>
			</div>
		</div>
		<div class="form-actions">
			<button type="button" id="back-btn" class="btn"><i class="m-icon-swapleft"></i> Back </button>

			<button type="submit" class="btn green-haze pull-right"> Submit <i class="m-icon-swapright m-icon-white"></i></button>
		</div>
	</form>
	<!-- END FORGOT PASSWORD FORM -->

	<!-- BEGIN REGISTRATION FORM -->
	<form class="register-form" name="form" ng-controller="RegisterCtrl" ng-submit="create()" method="post">
		<h3 class="form-title">Sign Up</h3>
        <div class="alert alert-danger" ng-if="registerError">
			<button class="close" data-close="alert"></button>
			<span>{{registerError | translate}} </span>
		</div>
		<div class="form-group">
			<label class="control-label visible-ie8 visible-ie9">First Name</label>
			<div class="input-icon">
				<i class="fa fa-user"></i>
				<input required="" class="form-control placeholder-no-fix" type="text" placeholder="First Name" name="firstName" ng-model="user.firstName"/>
			</div>
		</div>
       	<div class="form-group">
			<label class="control-label visible-ie8 visible-ie9">Last Name</label>
			<div class="input-icon">
				<i class="fa fa-font"></i>
				<input required="" class="form-control placeholder-no-fix" type="text" placeholder="Last Name" name="lastName" ng-model="user.lastName"/>
			</div>
		</div>
		<div class="form-group">
			<!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
			<label class="control-label visible-ie8 visible-ie9">Email</label>
			<div class="input-icon">
				<i class="fa fa-envelope"></i>
				<input class="form-control placeholder-no-fix" type="email" placeholder="Email" name="email" ng-model="user.accountEmail"/>
			</div>
		</div>
        <div class="form-group">
			<!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
			<label class="control-label visible-ie8 visible-ie9">Contact No.</label>
			<div class="input-icon">
				<i class="fa fa-phone"></i>
				<input class="form-control placeholder-no-fix" type="text" placeholder="Contact Number" name="phone" ng-model="user.accountPhone"/>
			</div>
		</div>

		<div class="form-group">
			<label class="control-label visible-ie8 visible-ie9">Password</label>
			<div class="input-icon">
				<i class="fa fa-lock"></i>
				<input class="form-control placeholder-no-fix" type="password" minlength="8" tooltip-placement="right" tooltip-trigger="focus"  tooltip-append-to-body="true" tooltip="Password must contain: Minimum 8 characters atleast 1 UpperCase, 1 LowerCase, 1 Number and 1 Special Character" autocomplete="off" id="register_password"  placeholder="Password" name="password" ng-model="user.password"/>
			</div>
		</div>
		<div class="form-group">
			<label class="control-label visible-ie8 visible-ie9">Re-type Your Password</label>
			<div class="controls">
				<div class="input-icon">
					<i class="fa fa-check"></i>
					<input class="form-control placeholder-no-fix" type="password" pattern="^.*(?=.{8,40})(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[@#$%^&+=]).*$" autocomplete="off"  placeholder="Re-type Your Password" name="rpassword" ng-model="user.confirmPassword"/>
				</div>
			</div>
		</div>
		<div class="form-group">
			<label>
                 <checkbox name="tnc" ng-model="ConfirmAgree" ng-click="accepted()"></checkbox>
			     <span class="marg-left5">I agree to the <a href="">Terms of Service </a>and <a href="">Privacy Policy </a></span>
			</label>
			<div class="has-error" ng-if="tnc"><sapn class="help-block">{{tnc}}</sapn></div>
		</div>
		<div class="form-actions">
			<button id="register-back-btn" type="button" class="btn"><i class="m-icon-swapleft"></i> Back </button>

			<button type="submit" id="register-submit-btn" class="btn green-haze pull-right"
                    ng-disabled="(!user.firstName ||(form.firstName.$invalid && !form.firstName.$pristine))
			                    || (!user.lastName ||(form.lastName.$invalid && !form.lastName.$pristine))
			                    || (!user.accountEmail ||(form.email.$invalid && !form.email.$pristine))
			                    || (!user.password ||(form.password.$invalid && !form.password.$pristine))
			                    || (!user.confirmPassword ||(form.rpassword.$invalid && !form.rpassword.$pristine))">Sign Up <i class="m-icon-swapright m-icon-white"></i></button>
		</div>
	</form>
	<!-- END REGISTRATION FORM -->
</div>
<!-- END LOGIN -->
