
<h5 ><span class="heading-profile uppercase"><span class="bottom-border">Abou</span>t: {{userInfo.firstName}} {{userInfo.lastName}}</span></h5><br>
<div class="row">
    <div class="col-md-3 col-sm-3 thumbnails">
        <div class="portlet light">
            <a href=""  tooltip-html-unsafe="<i>Click to change your profile image</i>">
                <img onclick="openFileOption()" ng-src="{{server_path}}{{userInfo.photoLink}}" onError="this.onerror=null;this.src='images/thumb.jpg';" width="550" height="550" class="img-responsive">

            </a>
            <div class="social-info">
                <ul class="social-icons">
                    <li>
                        <a href="{{userInfo.linkTwitter}}/" target="_blank" class="twitter">
                        </a>
                    </li>
                    <li>
                        <a href="{{userInfo.linkFacebok}}/" target="_blank" class="facebook">
                        </a>
                    </li>
                    <li>
                        <a href="{{userInfo.linkLinkedin}}/" target="_blank"  class="linkedin"></a>
                    </li>
                    <li>
                        <a href="{{userInfo.linkGooglePlus}}/" target="_blank" class="googleplus">
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
	<div class="col-md-9 col-sm-9">
        <div class="portlet light">
            <div class="portlet-body">
                <form editable-form name="editableForm" onaftersave="saveUser()" oncancel="cancel()">
                    <div class="profile-table">
                        <div class="profile-heading"><i class="fa fa-user"></i> <strong>General Information</strong>

                              <button type="button" class="btn btn-default btn-sm pull-right" style="margin-top: -8px" ng-show="!editableForm.$visible" ng-click="editableForm.$show()">
                                <i class="fa fa-pencil"></i> Edit
                              </button>

                        </div>

                            <table class="table table-striped ">
                                <tbody>
                                <tr>
                                    <th>First Name</th>
                                    <td><span class="text-muted" editable-text="userInfo.firstName" e-form="editableForm" ng-bind="userInfo.firstName" e-required></span> </td>
                                    <th>Middle Name</th>
                                    <td><span class="text-muted" editable-text="userInfo.middleInitial" e-form="editableForm" ng-bind="userInfo.middleInitial || '-'"></span> </td>
                                </tr>
                                <tr>
                                    <th>Last Name</th>
                                    <td><span class="text-muted" editable-text="userInfo.lastName" e-form="editableForm"  ng-bind="userInfo.lastName" e-required></span> </td>
                                    <th>Sex</th>
                                   <td><span class="text-muted" editable-select="userInfo.sex" e-form="editableForm" e-style="width: 200px" e-ng-options="s.value as s.text for s in sexs">

                                       {{ (sexs | filter:{value: userInfo.sex})[0].text || '-' }}
                                   </span> </td>
                                </tr>
                                <tr>
                                     <th>Website</th>
                                    <td><span class="text-muted" editable-text="userInfo.linkWebsite" e-form="editableForm"  ng-bind="userInfo.linkWebsite || '-'"></span> </td>
                                    <th>Date of Birth</th>
                                    <td>
                                        <span editable-number="userInfo.bdMonth"  class="text-muted" e-style="width: 55px" e-placeholder="MM" e-title="MM" e-max="12" e-min="0" e-form="editableForm">{{dob}}</span>
                                        <span editable-number="userInfo.bdDay"  class="text-muted" e-style="width: 55px" e-placeholder="DD" e-title="DD" e-max="31" e-min="0" e-form="editableForm"></span>
                                        <span editable-number="userInfo.bdYear"  class="text-muted" e-style="width: 82px" e-placeholder="YYYY" e-pattern="\d{4}\" e-title="YYYY" e-max="2015" e-min="1910" e-form="editableForm"></span>
                                    </td>
                                </tr>
                                <tr>
                                    <th>Email</th>
                                    <td><span class="text-muted" editable-text="userInfo.email" e-form="editableForm" e-readonly="" ng-bind="userInfo.email" e-required></span> </td>
                                    <th>Alternate Email</th>
                                    <td><span class="text-muted" editable-text="userInfo.alternateEmail" e-form="editableForm" ng-bind="userInfo.alternateEmail || '-'"></span> </td>
                                </tr>
                                <tr>
                                    <th>Phone (Home)</th>
                                    <td><span class="text-muted" editable-text="userInfo.phoneHome" e-form="editableForm"  ng-bind="userInfo.phoneHome || '-'"></span> </td>
                                    <th>Phone (Cell)</th>
                                    <td><span class="text-muted" editable-text="userInfo.phoneCell" e-form="editableForm"  ng-bind="userInfo.phoneCell || '-'"></span> </td>
                                </tr>
                                <tr>
                                    <th>Phone (office)</th>
                                    <td><span class="text-muted" editable-text="userInfo.phoneOffice" e-form="editableForm"  ng-bind="userInfo.phoneOffice || '-'"></span> </td>
                                    <th>Language</th>
                                    <td><span class="text-muted" editable-text="userInfo.language" e-form="editableForm"  ng-bind="userInfo.language || '-'"></span> </td>
                                </tr>
                                <tr>
                                    <th>Highest Degree</th>
                                    <td><span class="text-muted" editable-select="userInfo.highestDegree" e-style="width: 200px" e-form="editableForm" e-ng-options="s.value as s.text for s in degrees">

                                        {{ (degrees | filter:{value: userInfo.highestDegree})[0].text || 'Not set' }}
                                    </span> </td>
                                    <th>Time Zone</th>
                                    <td><span class="text-muted" editable-text="userInfo.timeZone" e-form="editableForm"  ng-bind="userInfo.timeZone || '-'"></span> </td>
                                </tr>
                                <tr>
                                    <th>Hobbies</th>
                                    <td><span class="text-muted" editable-text="userInfo.hobbies" e-form="editableForm"  ng-bind="userInfo.hobbies || '-'"></span> </td>
                                    <th>Video Player</th>
                                    <td><span class="text-muted" editable-select="userInfo.videoPlayers" e-style="width: 200px" e-form="editableForm" e-ng-options="s.value as s.text for s in videoPlayers">

                                       {{ (videoPlayers | filter:{value: userInfo.videoPlayers})[0].text || '-' }}
                                   </span> </td>
                                </tr>
                                </tbody>
                            </table>
                    </div>

                    <div class="profile-table" ng-show="editableForm.$visible">
                        <div class="profile-heading"><i class="fa fa-user"></i> <strong>Social Information</strong></div>

                            <table class="table table-striped ">
                                <tbody>
                                <tr>
                                    <th>Twitter Link</th>
                                    <td><span class="text-muted" editable-text="userInfo.linkTwitter" e-form="editableForm" ng-bind="userInfo.linkTwitter" ></span> </td>
                                    <th>Facebook Link</th>
                                    <td><span class="text-muted" editable-text="userInfo.linkFacebok" e-form="editableForm" ng-bind="userInfo.linkFacebok"></span> </td>
                                </tr>
                                <tr>
                                    <th>Linkedin Link</th>
                                    <td><span class="text-muted" editable-text="userInfo.linkLinkedin" e-form="editableForm" ng-bind="userInfo.linkLinkedin"></span> </td>
                                    <th>Google Plus Link</th>
                                   <td><span class="text-muted" editable-text="userInfo.linkGooglePlus" e-form="editableForm" ng-bind="userInfo.linkGooglePlus"></span> </td>
                                </tr>

                                </tbody>
                            </table>
                    </div>

                    <section>
                            <h5 ><span class="border-title uppercase"><span class="bottom-border">Brie</span>f Profile</span></h5><br>
                            <div class="list-group1">
                                <div ng-show="editableForm.$visible" ng-class="{'has-error':errorMsg}">
                                    <summernote height="150" ng-model="userInfo.biography" on-change="changeDesc(contents)"></summernote>
                                    <div class="row" ng-show="userInfo.biography">
                                         <div class="help-block col-lg-6 col-md-6 col-sm-6 col-xs-6 text-left"><small ng-show="errorMsg">{{errorMsg}}</small></div>
                                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6 text-right text-muted"><small>You have typed {{typeChar}} out of 2000 chars</small></div>
                                    </div>
                                </div>
                                <div  ng-bind-html="desc" ng-show="!editableForm.$visible">

                                </div>
                           </div> <!--list-group -->
                    </section><br>

                    <!-- buttons -->
                    <div class="btn-form" ng-show="editableForm.$visible">
                        <button type="submit" ng-disabled="editableForm.$waiting || errorMsg" class="btn blue">Save</button>
                          <button type="button" ng-disabled="editableForm.$waiting" ng-click="editableForm.$cancel()" class="btn default">Cancel</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    </div>
    <div ng-if="loading" class="overlay"></div>
    <div ng-if="loading" class="loading-img"></div>
</div>
<input type="file" id="profileImg" accept="image/*" nv-file-select="" uploader="uploader"  style="display: none;">
<!-- END PAGE CONTENT-->
<script>
    function openFileOption() {

	    document.getElementById("profileImg").click();
    }

</script>

